# Frontend Environment Variables
# Copy this file to .env.local and fill in your values.
# Next.js only loads .env.local (and .env) at build/runtime.

# API (backend URL; use your deployed API or local server)
NEXT_PUBLIC_API_URL=https://your-api-url.com/api
# Local: NEXT_PUBLIC_API_URL=http://localhost:8000/api

# Stellar
NEXT_PUBLIC_STELLAR_NETWORK=TESTNET
NEXT_PUBLIC_HORIZON_URL=https://horizon-testnet.stellar.org

# IPFS / Pinata (for image URLs)
NEXT_PUBLIC_PINATA_GATEWAY=https://gateway.pinata.cloud

# Smart Contract IDs (must match server/testnet deployment)
NEXT_PUBLIC_REAPER_REGISTRY_CONTRACT_ID=your_reaper_registry_contract_id
NEXT_PUBLIC_VAULT_CONTRACT_ID=your_vault_contract_id
NEXT_PUBLIC_TOKEN_CONTRACT_ID=your_token_contract_id
NEXT_PUBLIC_BADGE_CONTRACT_ID=your_badge_contract_id

# App
NEXT_PUBLIC_APP_NAME=Soul Society Registry
