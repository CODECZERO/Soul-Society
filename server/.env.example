# Server Environment Variables
# Copy this file to .env and fill in your values.

PORT=8000
# Optional: MongoDB (used if not using vault-only mode)
# MONGODB_URI=mongodb://localhost:27017/soul-society

# CORS: comma-separated frontend origins
FRONTEND_URL=http://localhost:3000,http://127.0.0.1:3000

# JWT (use strong secrets in production)
ATS=your_access_token_secret_here
RTS=your_refresh_token_secret_here
ATE=15m
RTE=7d

# Stellar
BLOCKCHAIN_NETWORK=https://horizon-testnet.stellar.org
SOROBAN_RPC_URL=https://soroban-testnet.stellar.org

# Stellar admin key (for contract ops; testnet only in dev)
STACK_ADMIN_SECRET=your_stellar_admin_secret_here

# IPFS / Pinata
PINATA_JWT=your_pinata_jwt_here
PINATA_GATEWAY=gateway.pinata.cloud

# App
NODE_ENV=development

# Smart Contract IDs (fill after running ./deploy_contract.sh from repo root)
CONTRACT_ID=your_vault_contract_id_here
VAULT_CONTRACT_ID=your_vault_contract_id_here
MISSION_REGISTRY_CONTRACT_ID=your_mission_registry_contract_id_here
ESCROW_CONTRACT_ID=your_escrow_contract_id_here
REIATSU_TOKEN_CONTRACT_ID=your_reiatsu_token_contract_id_here
SOUL_BADGE_CONTRACT_ID=your_soul_badge_contract_id_here
TREASURY_CONTRACT_ID=your_treasury_contract_id_here
SOUL_REAPER_REGISTRY_CONTRACT_ID=your_soul_reaper_registry_contract_id_here
NOTIFICATIONS_CONTRACT_ID=your_notifications_contract_id_here
